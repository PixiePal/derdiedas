<div id="quiz_wrapper">
    <div id="feedback">
        <%unless flash[:notice_good].blank? %>
        <div id="notice_good">
            <p>
                <%= flash[:notice_good] %>
            </p>
        </div>
        <%end %>
        <%unless flash[:notice_bad].blank? %>
        <div id="notice_bad">
            <p>
                <%= flash[:notice_bad] %>
            </p>
        </div>
        <%end %>
    </div>
    <h1><%= @word.german %></h1>
    <div id="der_die_das">
        <ul>
            <li>
                <%= link_to 'der', :action => :guess, :article => 'der' %>
            </li>
            <li>
                <%= link_to 'die', :action => :guess, :article => 'die' %>
            </li>
            <li>
                <%= link_to 'das', :action => :guess, :article => 'das' %>
            </li>
        </ul>
    </div>
    <div id="wrong_answers">
    	<div id="wrong_der">
    		<h4>der</h4>
    		<%= render :partial => 'word', :collection => @wrong_answers[:der] %>
    	</div>
		<div id="wrong_die">
    		<h4>die</h4>
			<%= render :partial => 'word', :collection => @wrong_answers[:die] %>
    	</div>
		<div id="wrong_das">
    		<h4>das</h4>
			<%= render :partial => 'word', :collection => @wrong_answers[:das] %>
    	</div>
    </div>
</div>
